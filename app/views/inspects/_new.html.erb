<%= form_for inspect do |i| %>
 <%= i.hidden_field :check, value: params[:check] %>
 <div class="col-md-offset-2 col-md-8 inspects-new-container">
   <div class="row">
     <%= i.label "画像" %>
     <%= i.file_field :images, class:"col" %><br>
     <%= i.label "発生日" %>
     <%= i.datetime_field :accrual_date, class:"col" %><br>
     <%= i.label "車種" %>
     <%= i.text_field :car_name %>
     <%= i.label "部品名" %>
