<div class="new-wrapper">
 <section class="container">
    <h1 class= "text-name">点検一覧</h1>
     <hr/>
      <table class="table table-bordered">
       <%= pie_chart Inspect.group(:car_name).count %>
       <thead>
         <tr>
          <th></th>
          <th>ID番号</th>
          <th>点検日</th>
          <th>車種</th>
          <th>部品名</th>
          <th>工程</th>
          <th>班名</th>
          <th>作成者</th>
          <th></th>
          <th></th>
   　　</thead>  
   　  <tbody>
       <% @inspects.each.with_index(1) do |i, idx| %>
        <% i.mold_type %>
        <% i.mold_type1 %>
        <% i.mold_type2 %>
        <tr>
          <td><%= idx %></td>
          <td><%= i.id %></td>
          <td><%= i.accrual_date %></td>
          <td><%= i.car_name %></td>
          <td><%= i.name %></td>
          <td><%= i.process %></td>
          <td><%= i.shop_name %></td>
          <td><%= i.user.user_name %></td>
          <% if i.mold_type.present? %>
            <td><%= link_to "詳細", inspect_path(id: i.id) %></td>
          <% elsif i.mold_type1.present? %>  
            <td><%= link_to "詳細", show1_path(id: i.id) %></td>
          <% else %>  
            <td><%= link_to "詳細", show2_path(id: i.id) %></td>
          <% end %> 
          <td><%= link_to "削除",  inspects_destroy_path(id: i.id), method: :delete %></td>
        </tr>
   　   <% end %> 
   　  </tbody>　
 </section>
</div>