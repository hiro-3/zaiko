<div class="new-wrapper">
  <div class="container">
　　<% if @topics.errors.any? %>
  　　<div id="error_explanation" class="alert-danger">
    　　<ul>
        <% @topics.errors.full_messages.each do |message| %>
        　<li><%= message %></li>
      　<% end %>
    　　</ul>
  　　</div>
　　<% end %>
    <%= form_for @topics do |f| %>
     <div class="col-md-offset-1 col-md-10 topics-new-container">
      <div class="row">
         <div class="col-md-10">
          <%= f.label "発生日" %>
          <span class="label label-danger"> 必須 </span>
          <%= raw sprintf(
             f.date_select(:accrual_date, use_month_numbers: true, date_separator: '%s'),'年','月')+'日' %><br>
          <%= f.label "時間" %>
          <span class="label label-danger"> 必須 </span>
          <%= f.time_field :time %><br>
          <%= f.label "件名" %>
          <span class="label label-danger"> 必須 </span>
          <%= f.text_field :subject, class:"col" %>
         </div> 
         <div class="col-md-10">
          <%= f.label "車種" %>
          <span class="label label-danger"> 必須 </span>
          <%= f.text_field :car_name %>
          <%= f.label "部品名" %>
          <span class="label label-danger"> 必須 </span>
          <%= f.text_field :car_type, class:"col" %>
          <%= f.label "工程" %>
          <span class="label label-danger"> 必須 </span>
          <%= f.text_field :process, class:"col" %>
         </div>  
         <div class="col-md-10"> 
          <%= f.label "班名" %>
          <span class="label label-danger"> 必須 </span>
          <%= f.text_field :shop_name, class:"col"  %>
          <%= f.label "作業者" %>
          <span class="label label-danger"> 必須 </span>
          <%= f.text_field :worker, class:"col" %>
          <%= f.label "工数" %>
          <%= f.number_field :man_hours,class:"col" %>
         </div> 
      </div>
       <div class="row">
         <div class="col-md-10">  
          <%= f.label "購入依頼部品" %>
          <%= f.text_area :parts, class: "form-control" %>
          <%= f.label "状況説明" %>
          <span class="label label-danger"> 必須 </span>
            <%= f.text_area :description, class: "form-control", rows: "7" %><br>
            <%= f.label "画像", class:"col-sm-1 col-form-label" %>
            <%= f.file_field :images %>
          <span class="label label-danger">必須</span>
          <%= f.check_box :check %>
    　     <%= "この内容で良ければチェックして登録ボタンをクリックしてください" %><br>
          <%= f.submit "登録" %>
         </div>
       </div>
      </div> 
    <% end %>
  </div>     
</div>